<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raiseyourhand"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.raiseyourhand.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.raiseyourhand.instructor.LecturesActivity"
            android:label="@string/title_activity_instructor_lectures"
            android:parentActivityName="com.raiseyourhand.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raiseyourhand.LoginActivity" />
        </activity>
        <activity
            android:name="com.raiseyourhand.student.LecturesActivity"
            android:label="@string/title_activity_student_lectures"
            android:parentActivityName="com.raiseyourhand.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raiseyourhand.LoginActivity" />
        </activity>
        <activity
            android:name="com.raiseyourhand.student.InfoActivity"
            android:label="@string/title_activity_info"
            android:parentActivityName="com.raiseyourhand.student.LecturesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raiseyourhand.student.LecturesActivity" />
        </activity>
    </application>

</manifest>