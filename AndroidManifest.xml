            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raiseyourhand.student.LectureActivity" />
        </activity>
        <activity
            android:name="com.raiseyourhand.student.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:parentActivityName="com.raiseyourhand.student.LectureActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raiseyourhand.student.LectureActivity" />
        </activity>
    </application>

</manifest>